[user]
	name = Guntur Poetra
	email = poetra.guntur@gmail.com
	signingkey = AE04C8F792C82CAF

[init]
	defaultBranch = master

[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = nvim

[commit]
	gpgsign = true

[gpg]
	program = gpg

[alias]
	aa = add --all
	br = branch
	ci = commit
	cis = commit --gpg-sign
	cl = clone
	co = checkout
	cob = checkout -b
	df = diff
	lo = log
	lol = log --oneline
	lola = log --graph --pretty=format:'%C(cyan bold)%h%C(reset) -%C(magenta bold)%d%C(reset) %s - %C(green bold)(%cr)%C(reset) %C(blue)<%an>%C(reset)' --decorate --abbrev-commit --all
	st = status --untracked-files=all
	sync = !git remote update --prune && git fetch --prune --prune-tags --all --tags --progress
	reinit = !rm -rf .git && git init && git add --all && git commit --gpg-sign --message=':rocket: Initial Commit'
	rehead = !git update-ref -d HEAD && git add --all && git commit --gpg-sign --message=':rocket: Initial Commit'
	nah = !git reset --hard && git clean -df

[color]
	ui = true

[color "diff"]
	commit = yellow bold
	frag = magenta bold
	meta = yellow
	new = green bold
	old = red bold
	whitespace = red reverse

[color "diff-highlight"]
	newHighlight = green bold 22
	newNormal = green bold
	oldHighlight = red bold 52
	oldNormal = red bold

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# [url "git@github.com:"]
# 	insteadOf = https://github.com/

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[tig]
	tab-size = 4
	status-show-untracked-files = true
