[user]
	email = poetra.guntur@gmail.com
	name = Guntur

[color]
	ui = true

[color "diff"]
	commit = yellow bold
	frag = magenta bold
	meta = yellow
	new = green bold
	old = red bold
	whitespace = red reverse

[color "diff-highlight"]
	newHighlight = green bold 22
	newNormal = green bold
	oldHighlight = red bold 52
	oldNormal = red bold

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
	aa = add -A
	br = branch
	ci = commit
	cl = clone
	co = checkout
	cob = checkout -b
	df = diff
	lo = log
	lol = log --oneline
	lola = log --graph --pretty=format:'%C(cyan bold)%h%C(reset) -%C(magenta bold)%d%C(reset) %s - %C(green bold)(%cr)%C(reset) %C(blue)<%an>%C(reset)' --decorate --abbrev-commit --all
	st = status
	sync = remote update --prune
	reinit = !rm -rf .git && git init && git add --all && git commit -am "init"
	nah = !git reset --hard && git clean -df
