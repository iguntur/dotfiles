## Reload sxhdrc
super + F1
	kill -9 $(pidof sxhkd) && sxhkd > /dev/null &

## Open `dmenu`
# super + {d,p}
# 	dmenu_run -i -p "dmenu:" -fn "Fira Code-10"

## Open Browser
# super + o; {b,c,f,g}
# 	{brave,chromium,firefox,google-chrome-stable} > /dev/null

## Open Terminal
# super + Return
# 	/usr/bin/alacritty

##
## deps:
## - pacman -S xorg-xbacklight
## - pacman -S brightnessctl
##
## (fn + F3) - Decrease led keyboard brightness
XF86KbdBrightnessDown
	brightnessctl --device='asus::kbd_backlight' set '1-' > /dev/null

# (fn + F4) - Increase led keyboard brightness
XF86KbdBrightnessUp
	brightnessctl --device='asus::kbd_backlight' set '+1' > /dev/null

##
## deps:
## - pacman -S xorg-xbacklight
## - pacman -S brightnessctl
##
# (fn + F5) - Decrease screen brightness
# xbacklight -dec 10
XF86MonBrightnessDown
	brightnessctl --device='intel_backlight' set '3%-' > /dev/null

# (fn + F6) - Increase screen brightness
# xbacklight -inc 10
XF86MonBrightnessUp
	brightnessctl --device='intel_backlight' set '+10%' > /dev/null

## (fn + F9) - Toggle Touchpad
# XF86TouchpadToggle
# 	xinput-toggle -r 'Touchpad'

# (fn + F10) - Toggle Mute
XF86AudioMute
	pactl set-sink-mute 0 toggle

# (fn + F11) - Volume Down
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%   # -5% (down)

# (fn + F12) - Volume Up
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%   # +5% (up)

# (Shift + fn + F10) - Toggle Mute (Microphone)
shift + XF86AudioMute
	pactl set-source-mute 1 toggle

# (Shift + fn + F11) - Input Volume Down (Microphone)
shift + XF86AudioLowerVolume
	pactl set-source-volume 1 -5%   # -5% (down)

# (Shift + fn + F12) - Input Volume Up (Microphone)
shift + XF86AudioRaiseVolume
	pactl set-source-volume 1 +5%   # +5% (up)

## Printscreen
Print
	flameshot full --clipboard

## Selection printscreen
shift + Print
	flameshot gui
