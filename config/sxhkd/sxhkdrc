## Open `dmenu`
# super + {d,p}
# 	dmenu_run -i -p "dmenu:" -fn "Fira Code-10"

## Open Browser
# super + o; {b,c,f,g}
# 	{brave,chromium,firefox,google-chrome-stable} > /dev/null

## Open Terminal
super + Return
	alacritty

## (fn + F3) - Decrease led keyboard brightness
# XF86KbdBrightnessDown
# 	brightnessctl --device='asus::kbd_backlight' set '1-' > /dev/null

## (fn + F4) - Increase led keyboard brightness
# XF86KbdBrightnessUp
# 	brightnessctl --device='asus::kbd_backlight' set '+1' > /dev/null

## (fn + F5) - Decrease screen brightness
# XF86MonBrightnessDown
# 	brightnessctl --device='intel_backlight' set '5%-' > /dev/null

## (fn + F6) - Increase screen brightness
# XF86MonBrightnessUp
# 	brightnessctl --device='intel_backlight' set '+5%' > /dev/null

## (fn + F9) - Toggle Touchpad
# XF86TouchpadToggle
# 	xinput-toggle -r 'Touchpad'

## (fn + F10) - Toggle Mute
# XF86AudioMute
# 	pactl set-sink-mute 0 toggle

## (fn + F11) - Volume Down
# XF86AudioLowerVolume
# 	pactl set-sink-volume 0 -5%   # -5% (down)

## (fn + F12) - Volume Up
# XF86AudioRaiseVolume
# 	pactl set-sink-volume 0 +5%   # +5% (up)

## (Shift + fn + F10) - Toggle Mute (Microphone)
# super + XF86AudioMute
# 	pactl set-source-mute 1 toggle

## (Shift + fn + F11) - Input Volume Down (Microphone)
# super + XF86AudioLowerVolume
# 	pactl set-source-volume 1 -5%   # -5% (down)

## (Shift + fn + F12) - Input Volume Up (Microphone)
# super + XF86AudioRaiseVolume
# 	pactl set-source-volume 1 +5%   # +5% (up)

## Printscreen
Print
	flameshot full --clipboard

shift + Print
	flameshot gui
