{
	// COC Base Settings
	"coc.preferences.formatOnSaveFiletypes": [
		"css",
		"hmtl",
		"javascript",
		"javascriptreact",
		"json",
		"typescript",
		"typescriptreact"
	],

	// COC Explorer
	"explorer.toggle": true,
	"explorer.openAction.strategy": "sourceWindow",
	"explorer.icon.enableNerdfont": true,
	"explorer.keyMappings": {
		"<BS>": "gotoParent", // Backspace
		"<C-k>": "collapse", // Ctrl-k
		"<C-j>": ["expandable?", "expand", "open"] // Ctrl-j
	},
	"explorer.previewAction.onHover": false,

	"json.enable": true,

	// Prettier Settings
	"prettier.arrowParens": "always",
	"prettier.bracketSpacing": false,
	"prettier.endOfLine": "auto",
	"prettier.htmlWhitespaceSensitivity": "css",
	"prettier.jsxBracketSameLine": true,
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 120,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 4,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,

	// Typescript Server Settings
	"tsserver.npm": "/home/guntur/.nvm/versions/node/v12.16.1/bin/npm",
	"typescript.format.enabled": false
}
